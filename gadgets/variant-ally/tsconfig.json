{
  "compilerOptions": {
    "target": "ES2016",
    "module": "esnext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "outDir": "dist/",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "node_modules/types-mediawiki",
  ],
  "exclude": []
}